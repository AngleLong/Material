<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- New MaterialComponents attributes. -->
        <item name="colorPrimaryLight">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryLight">@color/colorPrimaryDark</item>
        <item name="colorSecondaryDark">@color/colorPrimaryDark</item>
        <item name="scrimBackground">@color/mtrl_scrim_color</item>
        <item name="snackbarButtonStyle">?attr/borderlessButtonStyle</item>
    </style>

    <style name="BaseAppTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:windowNoTitle">true</item>-->
    </style>
</resources>
